# Environment Variables for Gmail to NotebookLM Converter
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control

# Output directory for exported Markdown files
# Default: ./output
GMAIL_TO_NBL_OUTPUT_DIR=./output

# Path to Google OAuth credentials file
# Default: ./credentials.json
GMAIL_TO_NBL_CREDENTIALS_PATH=./credentials.json

# Path to store authentication token
# Default: ./token.json
GMAIL_TO_NBL_TOKEN_PATH=./token.json

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Default: INFO
GMAIL_TO_NBL_LOG_LEVEL=INFO

# Maximum number of emails to process per label
# Default: unlimited (leave empty or 0)
GMAIL_TO_NBL_MAX_RESULTS=

# Configuration file path (if using YAML config)
# Default: ./.gmail-to-notebooklm.yaml
GMAIL_TO_NBL_CONFIG_PATH=./.gmail-to-notebooklm.yaml

# Performance settings
# Number of concurrent API requests (1-10)
GMAIL_TO_NBL_MAX_WORKERS=5

# Delay between API requests in seconds
GMAIL_TO_NBL_REQUEST_DELAY=0.1

# Output options
# Organize output by date (true/false)
GMAIL_TO_NBL_ORGANIZE_BY_DATE=false

# Overwrite existing files (true/false)
GMAIL_TO_NBL_OVERWRITE=false

# Markdown conversion options
# Text wrap width (0 = no wrapping)
GMAIL_TO_NBL_WRAP_WIDTH=0

# Include email headers in output (true/false)
GMAIL_TO_NBL_INCLUDE_HEADERS=true

# Development settings (optional)
# Enable debug mode
DEBUG=false

# Enable verbose output
VERBOSE=false
